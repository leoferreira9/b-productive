<!DOCTYPE html>
<html lang="en">
<head class="bg-dark text-white">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Listas de Tarefas B-Productive</title>
</head>
<body class="bg-dark text-white">
    <%- include("partials/header") %>

    <div class="container">
        <h1><%= list.title %></h1>
        <div>
            <form action="/app/<%= list.id %>/newTask" method="post">
                <input type="text" name="newTaskTitle" id="newTaskTitle" required placeholder="Adicionar nova tarefa...">
                <button type="submit" class="btn btn-primary btn-sm">Adicionar</button>
            </form>
        </div>
        <div>
            <ul>
                <% list.tasks.forEach(task => { %>
                    <li class="<%= task.completed ? 'bg-success text-white' : '' %>">
                        <% if (!task.completed) { %>
                            <form action="/app/<%= list.id %>/complete/<%= task.id %>" method="post">
                                <span><%= task.title %></span>
                                <button type="submit" class="btn btn-success btn-sm">Completar</button>
                            </form>
                        <% } else { %>
                            <form action="/app/<%= list.id %>/undo/<%= task.id %>" method="post">
                                <span><%= task.title %></span>
                                <button type="submit" class="btn btn-danger btn-sm">Desfazer</button>
                            </form>   
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        </div>
        <a href="/app" class="btn btn-secondary btn-md">Voltar para todas as listas</a>
    </div>

    <%- include("partials/footer") %>
</body>
</html>