<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Listas de Tarefas B-Productive</title>
</head>
<body class="bg-dark text-white">
    <%- include("partials/header") %>

    <div class="container">
        <h1>Listas de Tarefas</h1>
        <div>
            <ul class="list-group">
                <% lists.forEach(list => { %>
                    <li class="list-group-item bg-dark border-secondary">
                        <form action="/app/<%= list.id %>/delete" method="post" class="d-flex justify-content-between align-items-center">
                            <a href="/app/<%= list.id %>" class="flex-grow-1 text-decoration-none text-white"><%= list.title %></a>
                            <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        </div>
        <a class="btn btn-primary mt-3" href="/app/new-list">Nova Lista de Tarefas</a>
    </div>

    <%- include("partials/footer") %>
</body>
</html>